<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--  Start : Your code should be within this block -->
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEE9E9">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="SvyU"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:background="#43CD80">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 4"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:text="What functions does your phone have now?"
        android:textColor="#4F4F4F"
        android:textSize="18sp"
        ></TextView>

        <RadioGroup
            android:id="@+id/question04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/f01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="Music functions"
                android:textSize="13sp"
                android:textColor="#000000"></CheckBox>
            <CheckBox
                android:id="@+id/f02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="Photo functions"
                android:textSize="13sp"
                android:textColor="#000000"></CheckBox>
            <CheckBox
                android:id="@+id/f03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="Game functions"
                android:textSize="13sp"
                android:textColor="#000000"></CheckBox>
            <CheckBox
                android:id="@+id/f04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="Business functions(Word,Excel,ect.)"
                android:textSize="13sp"
                android:textColor="#000000"></CheckBox>
            <CheckBox
                android:id="@+id/f05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="GPS functions"
                android:textSize="13sp"
                android:textColor="#000000"></CheckBox>
            <CheckBox
                android:id="@+id/f06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="Data functions(Bluetooth,WLAN,ect.)"
                android:textSize="13sp"
                android:textColor="#000000"></CheckBox>
            <CheckBox
                android:id="@+id/f07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="Others"
                android:textSize="13sp"
                android:textColor="#000000"></CheckBox>
        </RadioGroup>


    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#43CD80"
        android:text="NEXT"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="next4"
        >
    </Button>
</LinearLayout>


    <!-- END    : Your code should be within this block -->

</LinearLayout>
